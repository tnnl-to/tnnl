{
  "productName": "tnnl",
  "version": "0.1.0",
  "identifier": "com.tnnl.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "tnnl - Settings",
        "width": 500,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/tnnl-co/tnnl/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE2MDQ3QUMyQ0EzRDEwQUUKUldTdUVEM0t3bm9FRmk4R25CZFhTU0ZhOGtmWEZiOXY0M0lWTkF1dGx6SXE5OWlkTVJDaUNTQzIK"
    }
  }
}
